<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="Treadmill.Ui.Styles.GeneralDevicesStyle">

    <Style TargetType="Entry" x:Key="ButtonStyle">
        <Setter Property="HeightRequest">
            <Setter.Value>
                <OnIdiom x:TypeArguments="x:Double" Phone="100" Tablet="200"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Width">
            <Setter.Value>
                <OnIdiom x:TypeArguments="x:Double" Phone="50" Tablet="100"/>
            </Setter.Value>
        </Setter>
        <Setter Property="FontSize">
            <Setter.Value>
                <OnIdiom x:TypeArguments="x:Double" Phone="15" Tablet="36"/>
            </Setter.Value>
        </Setter>
        <Setter Property="HorizontalOptions" Value="FillAndExpand" />
        <Setter Property="TextColor" Value="{StaticResource Primary}"/>
        <Setter Property="PlaceholderColor" Value="Gray" />
    </Style>
    
</ResourceDictionary>