<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       x:Class="Treadmill.Maui.Views.MainView"
       xmlns:views="clr-namespace:Treadmill.Maui.Views"
       BackgroundColor="{StaticResource TreadmillDarkGray}">

  <Shell.Resources>
    <ResourceDictionary>
      <ResourceDictionary Source="../Styles/Styles.xaml" />
    </ResourceDictionary>
  </Shell.Resources>

  <TabBar>
    <Tab Title="Controls">
      <ShellContent ContentTemplate="{DataTemplate views:ControlsView}" />
    </Tab>
    <Tab  Title="Workouts">
      <ShellContent ContentTemplate="{DataTemplate views:WorkoutsView}" />
    </Tab>
    <Tab  Title="Log">
      <ShellContent ContentTemplate="{DataTemplate views:LogView}" />
    </Tab>
    <Tab Title="Settings">
      <ShellContent ContentTemplate="{DataTemplate views:SettingsView}" />
    </Tab>
  </TabBar>
</Shell>