<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="Treadmill.Maui.Views.MainView"
            BarBackgroundColor="{StaticResource TreadmillDarkGray}"
            ItemsSource="{Binding Items}"
            SelectedItem="{Binding ActiveItem, Mode=TwoWay}">


  <TabbedPage.Resources>
    <ResourceDictionary>
      <ResourceDictionary Source="../Styles/Styles.xaml" />
      <ResourceDictionary x:Name="styles"/>
    </ResourceDictionary>
  </TabbedPage.Resources>

  <!--<ContentPage Content="{Binding ControlsView}" BackgroundColor="{StaticResource TreadmillGray}" Title="{Binding DisplayName}"/>
  <ContentPage Content="{Binding WorkoutsView}" BackgroundColor="{StaticResource TreadmillGray}" Title="{Binding DisplayName}"/>
  <ContentPage Content="{Binding SettingsView}" BackgroundColor="{StaticResource TreadmillGray}" Title="{Binding DisplayName}"/>
  <ContentPage Content="{Binding LogView}" BackgroundColor="{StaticResource TreadmillGray}" Title="{Binding DisplayName}"/>-->

  <TabbedPage.ItemTemplate>
    <DataTemplate>
      <ContentPage Visual="Material"
                         BackgroundColor="{StaticResource TreadmillGray}"
                         Title="{Binding DisplayName}" 
                         BindingContext="{Binding}" />
    </DataTemplate>
  </TabbedPage.ItemTemplate>
  
</TabbedPage>